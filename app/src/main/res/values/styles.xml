<resources>

    <!--App主题-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <!--启动页主题-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <!--WebView页主题-->
    <style name="WebTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--==========================================通用样式==========================================-->

    <!--分割线样式-->
    <style name="DividerStyle">
        <item name="android:background">@color/C9</item>
        <item name="android:layout_height">@dimen/divider_size</item>
    </style>

    <!--==========================================自定义样式==========================================-->

    <!--MainActivity-->
    <style name="MainBottomTabConstraintLayout">
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
        <item name="layout_constraintHorizontal_weight">1</item>
        <item name="android:paddingTop">@dimen/L6</item>
        <item name="android:background">@color/C2</item>
        <item name="android:paddingBottom">@dimen/dp_main_bottom_tab_padding_bottom</item>
    </style>

    <style name="MainBottomTabImageView">
        <item name="android:layout_width">@dimen/dp_main_bottom_tab_icon_width</item>
        <item name="android:layout_height">@dimen/dp_main_bottom_tab_icon_height</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="MainBottomTabTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:textSize">@dimen/F6</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/dp_main_bottom_tab_title_margin_top</item>
    </style>

    <!--TransferActivity-->
    <style name="TransferOptionsTextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/L5</item>
        <item name="android:background">@drawable/round_rect_no_solid_quota_bg</item>
        <item name="android:textSize">@dimen/F3</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/C6</item>
    </style>

    <!--TransferDetailActivity-->
    <style name="TransferDetailLabelTextView">
        <item name="android:background">@color/C2</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/L1</item>
        <item name="android:textColor">@color/C6</item>
        <item name="android:textSize">@dimen/F4</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/L4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="TransferDetailTextView">
        <item name="android:background">@color/C2</item>
        <item name="android:gravity">center_vertical|end</item>
        <item name="android:paddingEnd">@dimen/L1</item>
        <item name="android:textColor">@color/C6</item>
        <item name="android:textSize">@dimen/F4</item>
        <item name="android:layout_width">@dimen/match_constraint</item>
        <item name="android:layout_height">@dimen/L4</item>
        <item name="android:includeFontPadding">false</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <!--ChooseAreaCodeActivity-->
    <declare-styleable name="SideBar">
        <attr name="text_size" format="dimension"/>
        <attr name="default_color" format="color"/>
        <attr name="chosen_color" format="color"/>
        <attr name="default_background_color" format="color"/>
        <attr name="touching_background_color" format="color"/>
    </declare-styleable>
</resources>
