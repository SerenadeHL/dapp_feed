<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include layout="@layout/divider"
             android:layout_width="@dimen/match_constraint"
             android:layout_height="@dimen/divider_size"
             app:layout_constraintEnd_toEndOf="parent"
             android:id="@+id/v_divider"
             app:layout_constraintTop_toTopOf="parent"
             app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="@dimen/sp_invitation_history_item_account_text_size"
            tools:text="李亿虎"
            android:textColor="@color/C6"
            android:includeFontPadding="false"
            android:layout_marginTop="@dimen/L1"
            android:layout_marginStart="@dimen/L1"
            android:id="@+id/tv_account"
            app:layout_constraintTop_toBottomOf="@id/v_divider"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_time"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="@id/tv_account"
            app:layout_constraintTop_toBottomOf="@id/tv_account"
            android:layout_marginTop="@dimen/dp_invitation_history_item_time_margin_top"
            tools:text="2018-07-01 23:59:59"
            android:textColor="@color/C8"
            android:textSize="@dimen/F5"
            android:layout_marginBottom="@dimen/dp_invitation_history_item_time_margin_bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_kyc_status"
            android:textColor="@color/C6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="@dimen/L1"
            tools:text="已实名"
            android:textSize="@dimen/sp_invitation_history_item_kyc_status_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>