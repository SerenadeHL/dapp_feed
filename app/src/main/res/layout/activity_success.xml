<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="@color/C2"
        android:layout_height="match_parent">

    <include layout="@layout/title_layout"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_height="wrap_content"
             android:layout_width="@dimen/match_constraint"/>

    <ImageView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/success_icon"
            android:layout_marginTop="@dimen/L3"
            app:layout_constraintTop_toBottomOf="@id/cl_title"
            android:id="@+id/iv_success"
            android:layout_width="@dimen/dp_success_icon_width"
            android:layout_height="@dimen/dp_success_icon_height"/>

    <TextView
            android:layout_marginTop="@dimen/L8"
            android:textColor="@color/C6"
            android:textSize="@dimen/F2"
            android:id="@+id/tv_description"
            tools:text="划转成功，您可以前往jetaxon.pro查看"
            android:layout_width="@dimen/match_constraint"
            android:layout_marginStart="@dimen/L1"
            android:layout_marginEnd="@dimen/L1"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_success"
            android:layout_height="wrap_content"/>

    <Button
            android:layout_width="@dimen/match_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description"
            android:layout_marginStart="@dimen/L1"
            android:layout_marginTop="@dimen/dp_finish_btn_margin_top"
            android:id="@+id/btn_ok"
            android:textSize="@dimen/F3"
            android:textColor="@color/C2"
            android:text="@string/finish"
            android:layout_marginEnd="@dimen/L1"
            android:layout_marginBottom="@dimen/L6"
            android:background="@drawable/round_rect_solid_dark_blue_bg"
            android:layout_height="@dimen/L2"/>
</android.support.constraint.ConstraintLayout>